@model UniversiteOgrenciYonetimSistemi.Models.Ogrenci

<h2>Register</h2>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-success">
        @ViewBag.Message
    </div>
}

<form asp-action="Register" method="post" class="mt-4">
    <div class="mb-3">
        <label for="Ad" class="form-label">Ad:</label>
        <input type="text" id="Ad" name="Ad" class="form-control" required />
    </div>
    <div class="mb-3">
        <label for="Soyad" class="form-label">Soyad:</label>
        <input type="text" id="Soyad" name="Soyad" class="form-control" required />
    </div>
    <div class="mb-3">
        <label for="Universite" class="form-label">Üniversite:</label>
        <input type="text" id="Universite" name="Universite" class="form-control" required />
    </div>
    <div class="mb-3">
        <label for="Bolum" class="form-label">Bölüm:</label>
        <input type="text" id="Bolum" name="Bolum" class="form-control" required />
    </div>
    <div class="mb-3">
        <label for="Sinif" class="form-label">Sınıf:</label>
        <input type="number" id="Sinif" name="Sinif" class="form-control" required />
    </div>
    <div class="mb-3">
        <label for="Email" class="form-label">Email:</label>
        <input type="email" id="Email" name="Email" class="form-control" required />
    </div>
    <div class="mb-3">
        <label for="Sifre" class="form-label">Şifre:</label>
        <input type="password" id="Sifre" name="Sifre" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Kayıt Ol</button>
</form>
